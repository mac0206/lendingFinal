{
  "name": "lendify",
  "version": "1.0.0",
  "description": "Integrated Lending Platform - All Systems",
  "scripts": {
    "start": "node scripts/start-all.js",
    "start:dev": "node scripts/start-all.js dev",
    "install:all": "node scripts/install-all.js",
    "update:password": "node backend/scripts/update-mongodb.js",
    "fix:password": "node backend/scripts/fix-password-encoding.js",
    "test:mongodb": "node backend/scripts/test-mongodb-connection.js",
    "backend:start": "cd \"backend/member-a\" && npm start && cd \"backend/member-b\" && npm start && cd \"backend/member-c\" && npm start",
    "backend:a": "cd \"member-a/backend\" && npm start",
    "backend:b": "cd \"member-b/backend\" && npm start",
    "backend:c": "cd \"member-c/backend\" && npm start",
    "frontend": "cd frontend && npm start",
    "dev:a": "cd \"member-a/backend\" && npm run dev",
    "dev:b": "cd \"member-b/backend\" && npm run dev",
    "dev:c": "cd \"member-c/backend\" && npm run dev"
  },
  "keywords": ["lending", "platform", "catalog", "dashboard"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  }
}
